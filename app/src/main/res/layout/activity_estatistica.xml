<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="center"
    android:background="@color/cinza"
    tools:context=".views.Entrar.Estatistica.Estatistica">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cinza"
        android:gravity="start"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Gestão"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:padding="20dp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:drawableEnd="@drawable/baseline_power_settings_new_24"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBackButtonClick" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estatisticas"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bordas"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de produtos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"

                />
            <TextView
                android:id="@+id/quantiProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"
                android:layout_margin="15dp"

                />

            <TextView
                android:id="@+id/detalhesProdutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/midnightblue"
                android:clickable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bordas"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promoções"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"
                />
            <TextView
                android:id="@+id/quantiPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/detalhesPromo"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/midnightblue"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/bordas"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"
                />
            <TextView
                android:id="@+id/quantiVendas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cor_pm"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/detalhesVendas"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/midnightblue"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black"
            android:gravity="start"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomMenu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp">


            <ImageButton
                android:id="@+id/casaPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_home_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 1"
                android:onClick="onButton1ClickHome" />

            <ImageButton
                android:id="@+id/produtosLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_folder_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickFavoritos" />



            <ImageButton
                android:id="@+id/estatisticaList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_pie_chart_24"
                android:background="@color/saf"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickVendas" />

            <ImageButton
                android:id="@+id/clienteList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_people_alt_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickEstatisicas" />

            <ImageButton
                android:id="@+id/perfilListar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_2_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickPerfil" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>