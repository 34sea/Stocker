<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="center"
    android:background="@color/midnightblue"
    tools:context=".views.Entrar.Home.HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/midnightblue"
        android:gravity="start">

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Gestão"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:padding="20dp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:drawableEnd="@drawable/baseline_power_settings_new_24"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onBackButtonClick" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem vindo(a) de volta!!!"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:gravity="start"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nossos serviços"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue"
            android:gravity="start"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:gravity="bottom">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"

                    android:src="@drawable/post2"
                    />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="170dp"
                    android:src="@drawable/update4"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue"
            android:gravity="start"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp">

                <Button
                    android:id="@+id/novoPost"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/midnightblue"
                    android:text="Novo post"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:onClick="onButton1ClickNovoPost"
                    />
                <Button
                    android:id="@+id/produtosAtualizar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:backgroundTint="@color/midnightblue"
                    android:text="Atualizações"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:onClick="onButton1ClickAtualizacoes"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue"
            android:gravity="start"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"

                    android:src="@drawable/delete4"
                    />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="170dp"
                    android:src="@drawable/promo2"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midnightblue"
            android:gravity="start"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/produtoApagar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/midnightblue"
                    android:text="Deletar Post"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:onClick="onButton1ClickApagarPost"
                    />
                <Button
                    android:id="@+id/produtosPromocoes"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:backgroundTint="@color/midnightblue"
                    android:text="Promoções"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:onClick="onButton1ClickPromocoes"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomMenu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp">


            <ImageButton
                android:id="@+id/casaPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_home_24"
                android:background="@color/saf"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 1"
                android:onClick="onButton1ClickHome" />

            <ImageButton
                android:id="@+id/produtosLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_folder_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickFavoritos" />



            <ImageButton
                android:id="@+id/estatisticaList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_pie_chart_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickVendas" />

            <ImageButton
                android:id="@+id/clienteList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_people_alt_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickEstatisicas" />

            <ImageButton
                android:id="@+id/perfilListar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_2_24"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:contentDescription="Icon 2"
                android:onClick="onButton1ClickPerfil" />

            <!-- Adicione mais ImageButton para os outros ícones -->

        </LinearLayout>
    </LinearLayout>

</ScrollView>